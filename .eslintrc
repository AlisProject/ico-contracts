{
  "parser": "babel-eslint",
  "parserOptions": {
    "allowImportExportEverywhere": true,
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": [
    "airbnb-base"
  ],
  "rules": {
    "func-names": 0,
    "no-undef": 0,
    "import/extensions": [
      "off",
      "never"
    ],
    "import/no-absolute-path": "off",
    "import/no-unresolved": [
      2,
      {
        "ignore": [
        ]
      }
    ],
    "max-len": [
      2,
      120,
      2,
      {
        "ignoreComments": true
      }
    ],
    "import/no-extraneous-dependencies": 0,
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "_id"
        ]
      }
    ],
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "no-await-in-loop": "off"
  },
  "globals": {
    "web3": true,
    "contract": true,
    "describe": false,
    "it": false,
    "before": false,
    "beforeEach": false,
    "after": false,
    "afterEach": false
  }
}
